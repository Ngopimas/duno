<div class="row vh-100">
  <div class="col-6 card">
    <div class="row">
      <h6 class="text-center">Customize your track</h6>
    </div>
    <div class="row" style="flex-direction: column">
        <div style="display: flex; height: 100px; justify-content: space-evenly;">
          <% if @track.photo.attached? %>
            <%= cl_image_tag @track.photo.key, style:"width: 40%; height: auto; object-fit: contain; object-position: center;", class:"rounded-circle" %>
          <% else %>
            <%= image_tag "logo.jpg", alt: "alttext", style:"height: auto; width: 30%; object-fit: contain; object-position: center", class:"rounded-circle" %>
          <% end %>
          <%= link_to 'Upload your logo', edit_track_path, class:"btn btn-yellow", style:"height: max-content; margin: auto 0", data:{ toggle:"modal", target:"#exampleModalCenter-bis" }%>
        </div>
    </div>
    <div class="row">
      <%= simple_form_for @track do |f| %>
        <%= f.input :color_theme, label: "Choose your color theme", collection: [["#blue", "#8CB3DB"], ["#blue", "#8CB3DB"], ["#8CB3DB", "blue"], ["#8CB3DB", "blue"], ["#8CB3DB", "blue"], ["#8CB3DB", "blue"]] %>
        <%= f.button :submit, "Validate this color theme",  class: "btn btn-primary btn-lg mt-5" %>
      <% end %>
    </div>
    <div class="row">
      <%= simple_form_for @track do |f| %>
        <%= f.input :font_theme, label: "Choose your font theme", collection: ["Times New Roman", "Helvetica", "Palatino", "FreeMono", "Chancery cursive"] %>
        <%= f.button :submit, "Validate this font theme",  class: "btn btn-primary btn-lg mt-5" %>
      <% end %>
    </div>
  </div>
  <div class="col-6 card">
    <div class="d-flex justify-content-center p-5" style="font-family: <%= @track.font_theme %>, color: <%= @track.color_theme %>">
      <div class="smartphone bg-white">
        <div class="inside-content overflow-auto" id="preview-body">
        <% if !@track.chapters.last.nil? %>
          <div class="p-3 d-flex justify-content-between align-text-top">
            <% if @track.photo.attached? %>
              <%= cl_image_tag @track.photo.key, style:"width: 15%; height: auto; object-fit: contain; object-position: center;", class:"rounded-circle" %>
            <% else %>
              <%= image_tag "logo.jpg", alt: "alttext", style:"height: auto; width: 15%; object-fit: contain; object-position: center", class:"rounded-circle" %>
            <% end %>
            <p>Mon statut</p>
          </div>
          <div class="p-3">
            <div class="progress">
              <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
            </div>
          </div>
          <div class="p-3" >
            <% @track.chapters.each do |chapter| %>
              <div class="chapter-tab" data-target="#chapter-content-<%= chapter.id %>">
                <%= chapter.title %>
              </div>
              <div id="chapter-content-<%= chapter.id %>" class="chapter-content" style="display: none;">
                <div class="d-flex sticky-top py-2" style="background-color: rgba(255,255,255,0.9);">
                  <div class="back-chapters btn btn-primary mr-2" style="">
                    <
                  </div>
                  <h4 style="font-weight: bold;"><%= chapter.title %></h4>
                </div>
                <div id="chapter-body" style="text-align: justify; text-justify: word-spacing;">
                  <%= chapter.content %>
                </div>
                <div class="sticky-bottom" style="margin-top:20px;">
                  <button class="btn-disabled">Got it!</button>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

      <div class="modal fade" id="exampleModalCenter-bis" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Upload your company logo</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= simple_form_for @track do |f| %>
                <%= f.input :photo, as: :file %>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, "Save your logo",  class: "btn btn-primary" %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

