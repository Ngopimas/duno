<div class="row vh-100">
  <div class="col-2 card card-chapter">

<div data-controller="drag" data-drag-url="/tracks/:track_id/chapters/:id/move">
  <% @track.chapters.order(position: :asc).each do |chapter| %>
  <div data-id="<%= chapter.id %>" data-track_id="<%= chapter.track.id %>" class="card mb-4 bg-transparent border-0 shadow-none flex-align">
    <div class="flex-align">
      <div class="d-flex justify-content-between align-items-center">
        <div class="p-2">
                  <p style="width:40px; height:40px; font-weight:bold; background-color:#747575; border-radius:5px; text-align:center; color: white;"> <%= chapter.position %> </p>
        </div>
        <div class="ml-auto p-2">
          <p style="font-size: 14px;"> <strong> <%=link_to chapter.title, edit_track_chapter_path(@track, chapter) %> </strong></p>
        </div>
      </div>
   </div>
  </div>

  <% end %>
</div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-dark p-0" style="font-weight:bold; font-size:1.5em; width:40px; height:40px;" data-toggle="modal" data-target="#exampleModalCenter">
      +
    </button>



    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Add a new chapter</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@track, @chapter]  do |f| %>
              <%= f.input :rank, label: "Number" %>
              <%= f.input :title, label: "Title" %>
          </div>
          <div class="modal-footer">
              <%= f.button :submit, "Add the chapter",  class: "btn btn-primary" %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-6 card">
    <div class= "mx-auto">
      <div class= "mx-auto py-5">
         <% if !@track.chapters.last.nil? %>
            <%= simple_form_for [@track, @track.chapters.last] do |f| %>
              <%= f.input :title, label: "Title" %>
              <%= f.input :content, as: :rich_text_area, label: "Content" %>
              <%= f.button :submit, "Edit my chapter",  class: "btn btn-primary btn-lg mt-5" %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="col-4 card">
    <div class="smartphone">
      <div class="inside-content p-3 overflow-auto">
        <% if !@track.chapters.last.nil? %>
          <h3> <%= @track.chapters.last.title %> </h3>
          <%= @track.chapters.last.content %>
        <% end %>
      </div>
    </div>
  </div>
</div>
