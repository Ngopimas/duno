<div class="row vh-100">
  <div class="col-6 card">
    <div class="row">
      <h6 class="text-center">Customize your track</h6>
    </div>
    <div class="row" style="flex-direction: column">
        <div style="display: flex; height: 100px; justify-content: space-evenly;">
          <% if @track.photo.attached? %>
            <%= cl_image_tag @track.photo.key, style:"width: 40%; height: auto; object-fit: contain; object-position: center;", class:"rounded-circle" %>
          <% else %>
            <%= image_tag "logo.jpg", alt: "alttext", style:"height: auto; width: 30%; object-fit: contain; object-position: center", class:"rounded-circle" %>
<!--             <img src="" alt="" class="rounded-circle" style="height: 100%; width: 100%; object-fit: contain; object-position: center; border-color: black"> -->
          <% end %>
          <%= link_to 'Upload your logo', edit_track_path, class:"btn btn-yellow", style:"height: max-content; margin: auto 0", data:{ toggle:"modal", target:"#exampleModalCenter-bis" }%>
        </div>
    </div>
    <div class="row">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose your color theme
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#" style="background-color: blue">Blue</a>
          <a class="dropdown-item" href="#" style="background-color: green">Green</a>
          <a class="dropdown-item" href="#" style="background-color: yellow">Yellow</a>
          <a class="dropdown-item" href="#" style="background-color: orange">Orange</a>
          <a class="dropdown-item" href="#" style="background-color: red">Red</a>
          <a class="dropdown-item" href="#" style="background-color: violet">Violet</a>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Choose your font theme
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#" style="font-family: 'Times New Roman', Times, serif">Times New Roman</a>
            <a class="dropdown-item" href="#" style="font-family: 'Helvetica', sans-serif">Helvetica</a>
            <a class="dropdown-item" href="#" style="font-family: Palatino, URW Palladio L, serif">Palatino</a>
            <a class="dropdown-item" href="#" style="font-family: FreeMono, monospace">FreeMono</a>
            <a class="dropdown-item" href="#" style="font-family: URW Chancery L, cursive ">Chancery cursive</a>
          </div>
        </div>
    </div>
  </div>
  <div class="col-6 card">
    <p>Ecran preview</p>
  </div>
</div>

      <div class="modal fade" id="exampleModalCenter-bis" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Upload your company logo</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= simple_form_for @track do |f| %>
                <%= f.input :photo, as: :file %>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, "Save your logo",  class: "btn btn-primary" %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
