<!-- Navbar view edit  -->
<div id="navbar-edit">
  <%= render 'tracks/edit_navbar' %>
</div>

<!-- Body view edit  -->
<div class="tab-content" id="pills-tabContent">

  <!-- Onglet BUILD  -->
  <div class="tab-pane fade show active" id="pills-build" role="tabpanel" aria-labelledby="pills-build-tab">
    <div class="d-flex">
    <!-- Navbar de l'onglet BUILD  -->
      <div class="p-0" style="text-align: center; width:5%;">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link active" id="v-pills-chapters-tab" data-toggle="pill" href="#v-pills-chapters" role="tab" aria-controls="v-pills-chapters" aria-selected="true"><i class="far fa-edit"></i></a>
          <a class="nav-link" id="v-pills-style-tab" data-toggle="pill" href="#v-pills-style" role="tab" aria-controls="v-pills-style" aria-selected="false"><i class="fas fa-palette"></i></a>
          <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false"><i class="fas fa-cog"></i></a>
        </div>
      </div>

      <!-- Body de l'onglet BUILD  -->
      <div class="ml-3" style="width:95%;">
        <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active" id="v-pills-chapters" role="tabpanel" aria-labelledby="v-pills-chapters-tab">
            <!-- Insérer ici le code du sous-onglet CHAPTERS  -->
            <%= render 'tracks/edit_chapters' %>

          </div>
          <div class="tab-pane fade" id="v-pills-style" role="tabpanel" aria-labelledby="v-pills-style-tab">
            <!-- Insérer ici le code du sous-onglet STYLE  -->
            <%= render 'tracks/edit_style' %>

          </div>
          <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
            <!-- Insérer ici le code du sous-onglet SETTINGS  -->
            <%= render 'tracks/edit_settings' %>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Onglet SHARE  -->
  <div class="tab-pane fade" id="pills-share" role="tabpanel" aria-labelledby="pills-share-tab">
    <!-- Insérer ici le code de l'onglet SHARE  -->
    <%= render 'tracks/share' %>
  </div>


  <!-- Onglet OVERVIEW  -->
  <div class="tab-pane fade" id="pills-overview" role="tabpanel" aria-labelledby="pills-overview-tab">
    <!-- Insérer ici le code de l'onglet OVERVIEW  -->
    <%= render 'tracks/overview' %>
  </div>

  <!-- Onglet PREVIEW  -->
  <div class="tab-pane fade" id="pills-preview" role="tabpanel" aria-labelledby="pills-preview-tab">
    <!-- Insérer ici le code de l'onglet PREVIEW  -->
    <%= render 'tracks/edit_preview' %>
  </div>

</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>

<script>
  $(document).ready(function(){
      $('#pills-preview-tab').click(function() {
        $('#navbar-edit').toggle("slide");
      });
  });
</script>
