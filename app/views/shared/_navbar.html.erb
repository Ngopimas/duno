<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mx-4">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.jpg"%>
  <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
  <% if user_signed_in? %>
    <!-- If sign in - Dashboard -->


    <!-- If sign in - Track edition -->
      <% if current_url = "#" %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Build", new_track_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Share", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Analyze", "#", class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%= link_to "Upgrade", "#", class: "mx-4 btn btn-outline-secondary"%>
        <%= image_tag "https://upload-icon.s3.us-east-2.amazonaws.com/uploads/icons/png/16671574911586787867-512.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My account", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- If not sign in -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      </ul>
  <% end %>
</div>
