<div class="row vh-100">
  <div class="col-2 card card-chapter">
    <div class="row justify-content-start">
      <div class="col-4 justify-content-center align-self-center">
        <% @track.chapters.each do |chapter| %>
          <p style="width:40px; height:40px; font-weight:bold; background-color:#747575; border-radius:5px; text-align:center; color: white;"> <%= chapter.rank %>  </p>
        <% end %>
      </div>
      <div class="col-8 justify-content-center align-self-center">
        <% @track.chapters.each do |chapter| %>
          <p style="height:40px; font-weight:bold; "> <%= link_to chapter.title, edit_track_chapter_path(@track, chapter) %>  </p>
         <% end %>
      </div>
    </div>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-dark p-0" style="font-weight:bold; font-size:1.5em; width:40px; height:40px;" data-toggle="modal" data-target="#exampleModalCenter">
      +
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Add a new chapter</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@track, @chapter]  do |f| %>
              <%= f.input :rank, label: "Number" %>
              <%= f.input :title, label: "Title" %>
          </div>
          <div class="modal-footer">
              <%= f.button :submit, "Add the chapter",  class: "btn btn-primary" %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-6 card">
    <div class= "mx-auto">
      <div class= "mx-auto py-5">
         <% if !@track.chapters.last.nil? %>
            <%= simple_form_for [@track, @track.chapters.last] do |f| %>
              <%= f.input :title, label: "Title" %>
              <%= f.input :content, as: :rich_text_area, label: "Content" %>
              <%= f.button :submit, "Edit my chapter",  class: "btn btn-primary btn-lg mt-5" %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="col-4 card">
    <div class="smartphone">
      <div class="inside-content p-3 overflow-auto">
        <% if !@track.chapters.last.nil? %>
          <h3> <%= @chapter.title %> </h3>
          <% @chapter.content.embeds.each do |embed| %>
            <% if embed.video? %>
              <%= video_tag rails_blob_path(embed), size: "150x120", controls: true %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
