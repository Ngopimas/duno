<div class="row vh-100">
  <div class="col-2 bg-white card-chapter">
     <div class="flex-align">
      <div class="d-flex justify-content-between align-items-center">
          <div data-controller="drag" data-drag-url="/tracks/:track_id/chapters/:id/move" >
            <% @track.chapters.order(position: :asc).each do |chapter| %>
              <div data-id="<%= chapter.id %>" data-track_id="<%= chapter.track.id %>" class="table-chapter mb-4 border-0 shadow-none flex-align">
                <% if chapter == @chapter %>
                  <tr>
                          <td> <%= chapter.position %> </td>
                          <td class="active-chapter-row" style="font-size: 14px;"> <strong> <%= link_to chapter.title, edit_track_chapter_path(@track, chapter), class: "active-chapter-link" %> </strong> </td>
                 </tr>
                <% else %>
                  <tr>
                          <td class = "no-line"> <%= chapter.position %> </td>
                          <td class = "no-line" style="font-size: 14px;"> <strong> <%= link_to chapter.title, edit_track_chapter_path(@track, chapter), class: "no-line" %> </strong>  </td>
                  </tr>
                <% end %>
              </div>
            <% end %>

        </div>
      </div>
    </div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-dark p-0" style="font-weight:bold; font-size:1.5em; width:40px; height:40px;" data-toggle="modal" data-target="#exampleModalCenter">
      +
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Add a new chapter</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <%= simple_form_for [@track, @chapter]  do |f| %>
              <div class="modal-body">
                <%= f.input :title, label: "Title" %>
              </div>
              <div class="modal-footer">
                <%= f.button :submit, "Add the chapter",  class: "btn btn-primary" %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-6 bg-white border-left">
    <div class= "mx-auto">
      <div class= "mx-auto py-5">
         <% if !@track.chapters.last.nil? %>
            <%= simple_form_for [@track, @track.chapters.last] do |f| %>
              <%= f.input :title, label: "Title" %>
              <%= f.input :content, as: :rich_text_area, label: "Content" %>
              <%= f.button :submit, "Update chapter",  class: "btn btn-primary btn-lg mt-5" %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="col-4 bg-white border-left py-4">
    <div class="smartphone">
      <div class="inside-content">
        <%= render 'tracks/edit_preview_header' %>
        <% if !@track.chapters.last.nil? %>
          <div class="p-3">
            <h3> <%= @track.chapters.last.title %> </h3>
            <%= @track.chapters.last.content %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
