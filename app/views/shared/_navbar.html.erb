<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mx-4">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg"%>
  <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

  <!-- If sign in -->
  <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%= link_to "Upgrade", "#", class: "mx-4 btn btn-outline-secondary"%>
        <%= image_tag "person.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My tracks", tracks_path, class: "dropdown-item" %>
          <%= link_to "My account", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- If not sign in -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      </ul>
  <% end %>
</div>
